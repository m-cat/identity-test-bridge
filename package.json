{
  "name": "identity-test-bridge",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "browserslist": [
    "defaults",
    "not IE 11",
    "not OperaMini all"
  ],
  "scripts": {
    "build": "rimraf dist && cp -R html dist && npx webpack && npx webpack --config webpack.config.router.js",
    "lint:eslint": "eslint --ext .ts src",
    "lint:tsc": "tsc --noemit && tsc --project tsconfig.scripts.json --noemit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m-cat/identity-test-bridge.git"
  },
  "author": "Marcin Swieczkowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/m-cat/identity-test-bridge/issues"
  },
  "homepage": "https://github.com/m-cat/identity-test-bridge#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ext .ts --fix",
      "tsc --esModuleInterop --noemit",
      "prettier --write"
    ],
    "*.{json,yml,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "post-me": "^0.4.4",
    "skynet-js": "^3.0.1-beta",
    "url-join": "^4.0.1"
  },
  "devDependencies": {
    "@types/url-join": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.19.0",
    "eslint-plugin-jsdoc": "^31.6.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0"
  }
}
